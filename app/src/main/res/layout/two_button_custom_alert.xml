<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="40dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_alert_dialog">

        <TextView
            android:id="@+id/camera_cross"
            android:layout_width="@dimen/twenty_size"
            android:layout_height="@dimen/twenty_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/five_size"
            android:layout_marginTop="@dimen/five_size"
            android:gravity="center"
            android:padding="@dimen/ten_size"
            android:text="alert_dialog"
            android:textColor="@color/colorGeneralText"
            android:textSize="@dimen/regular_text_size"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_size"
            android:layout_below="@+id/tvHead"
            android:background="@color/colorLightGreen"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHead"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/five_size"
            android:gravity="center"
            android:padding="@dimen/ten_size"

            android:text="want_to_logout"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/regular_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_size"
            android:layout_below="@+id/tvInfo"
            android:background="@color/colorDarkText"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInfo"
            android:layout_marginTop="@dimen/activity_vertical_margin">



            <TextView
                android:id="@+id/tvRightPdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_ripple_black"
                android:gravity="center"
                android:padding="@dimen/ten_size"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/regular_text_size" />
            <View
                android:layout_width="@dimen/one_size"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/colorWhite" />
            <TextView
                android:id="@+id/tvLeftSide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_ripple_darkgreen_radius"
                android:gravity="center"
                android:padding="@dimen/ten_size"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/regular_text_size" />
            <View
                android:layout_width="@dimen/one_size"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/colorWhite" />


            <TextView
                android:id="@+id/tvRightSide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_ripple_black"
                android:gravity="center"
                android:padding="@dimen/ten_size"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/regular_text_size" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
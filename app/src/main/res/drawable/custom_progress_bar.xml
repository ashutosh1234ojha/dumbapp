<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--add  item to the layerlist to show different effects -->


    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="1080">
            <shape
                android:innerRadiusRatio="3.8"
                android:shape="ring"

                android:thicknessRatio="50"
                android:useLevel="false">
                <size
                    android:width="70dip"
                    android:height="70dip"
                    />


                <gradient
                    android:angle="180"
                    android:centerColor="@android:color/transparent"

                    android:endColor="@android:color/transparent"
                    android:gradientRadius="50%"
                    android:startColor="@android:color/holo_red_light"
                    android:type="sweep"
                    android:useLevel="false"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="1080"
            android:pivotX="50%"
            android:pivotY="50%"
            android:thickness="2dp"
            android:toDegrees="0">
            <shape
                android:innerRadiusRatio="4.2"
                android:shape="ring"
                android:thicknessRatio="50"
                android:useLevel="false">
                <size
                    android:width="50dip"
                    android:height="50dip"/>
                <gradient
                    android:angle="0"
                    android:centerColor="@android:color/transparent"

                    android:endColor="@android:color/holo_blue_dark"
                    android:gradientRadius="50%"
                    android:startColor="@android:color/transparent"
                    android:type="sweep"
                    android:useLevel="false"/>
            </shape>
        </rotate>

    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:thickness="2dp"
            android:toDegrees="1080">
            <shape
                android:innerRadiusRatio="4.8"
                android:shape="ring"
                android:thicknessRatio="50"
                android:useLevel="false">
                <size
                    android:width="30dip"
                    android:height="30dip"/>
                <gradient
                    android:angle="0"
                    android:centerColor="@android:color/transparent"

                    android:endColor="#FFFF00"
                    android:gradientRadius="50%"
                    android:startColor="@android:color/transparent"
                    android:type="sweep"
                    android:useLevel="false"/>
            </shape>
        </rotate>

    </item>
</layer-list>